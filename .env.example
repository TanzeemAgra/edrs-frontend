# Environment Variables Template for Frontend
# Copy this file to .env and fill in your values

# API Configuration
# Development API URL (local Django server)
VITE_DEV_API_URL=http://localhost:8000
# Production API URL (Railway deployment)
VITE_API_URL=https://edrs-backend-production.up.railway.app/api

# App Configuration
VITE_APP_NAME=EDRS
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Electronic Document Recording System

# Feature Flags
VITE_ENABLE_DEBUG=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_CHAT=false
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Authentication
VITE_JWT_SECRET=your-jwt-secret-here
VITE_TOKEN_EXPIRES_IN=24h

# API Configuration
VITE_API_TIMEOUT=30000
VITE_API_RETRIES=3

# External Services (Optional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=
VITE_STRIPE_PUBLIC_KEY=

# Development Settings
VITE_MOCK_API=false
VITE_DEBUG=true